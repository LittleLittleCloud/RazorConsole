@namespace RazorConsole.Components

@using System.Collections.Generic
@using Microsoft.AspNetCore.Components

<tbody @attributes="AdditionalAttributes">
    @ChildContent
</tbody>

@code {
    /// <summary>
    /// Represents the body section of a table containing the main data rows.
    /// </summary>
    /// <remarks>
    /// Use this component within a <see cref="SpectreTable"/> to define the table body.
    /// Contains <see cref="SpectreTR"/> rows with <see cref="SpectreTD"/> data cells.
    /// </remarks>

    /// <summary>
    /// Gets or sets the child content containing body rows.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Gets or sets additional HTML attributes to apply to the tbody element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object?>? AdditionalAttributes { get; set; }
}