@namespace RazorConsole.Components

@using System.Collections.Generic
@using Microsoft.AspNetCore.Components

<tr @attributes="AdditionalAttributes">
    @ChildContent
</tr>

@code {
    /// <summary>
    /// Represents a table row containing cells.
    /// </summary>
    /// <remarks>
    /// Use this component within <see cref="SpectreTHead"/>, <see cref="SpectreTBody"/>, or <see cref="SpectreTFoot"/>
    /// to define rows of table data. Contains <see cref="SpectreTH"/> (for headers) or <see cref="SpectreTD"/> (for data) cells.
    /// </remarks>

    /// <summary>
    /// Gets or sets the child content containing table cells.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Gets or sets additional HTML attributes to apply to the tr element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object?>? AdditionalAttributes { get; set; }
}