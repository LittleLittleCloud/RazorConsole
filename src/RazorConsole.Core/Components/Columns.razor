@namespace RazorConsole.Components

@using System.Globalization
@using Microsoft.AspNetCore.Components
@using RazorConsole.Core.Rendering.ComponentMarkup
@using Spectre.Console

<div class="columns"
    data-expand="@ExpandAttribute">
    @ChildContent
</div>

@code {
    /// <summary>
    /// Arranges child elements in a horizontal column layout.
    /// </summary>
    /// <remarks>
    /// Use this component to create side-by-side layouts. Each direct child is rendered as a column.
    /// For vertical layouts, use <see cref="Rows"/> instead.
    /// </remarks>

    private string ExpandAttribute => Expand ? "true" : "false";

    /// <summary>
    /// Gets or sets a value indicating whether the columns should expand to fill available horizontal space.
    /// </summary>
    /// <remarks>
    /// Default is <c>false</c>, which means columns will only use the space their content requires.
    /// </remarks>
    [Parameter]
    public bool Expand { get; set; } = false;

    /// <summary>
    /// Gets or sets the child content to be arranged in columns.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
