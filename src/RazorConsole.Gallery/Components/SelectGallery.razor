@using System.Threading.Tasks
@using RazorConsole.Components
@using Spectre.Console

<Rows>
    <Markup Content="Select shows a focusable dropdown with keyboard navigation, callbacks for changes, and styling hooks for each option." Foreground="@Color.Grey70" />
    <Markup Content="Source Code: Select.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
    <Newline />
    <Panel Title="Razor Component Syntax" Border="BoxBorder.Rounded" Expand="true">
        <SyntaxHighlighter Language="razor"
                           Code="@_exampleCode"
                           ShowLineNumbers="true" />
    </Panel>
    <Panel Title="Preview" Border="BoxBorder.Rounded" Expand="true">
        <Rows>
            <Select Options="@(new[] { "Align", "Border", "Columns", "Panel", "Select", "Text Input" })"
                    Placeholder="Choose a component"
                    Value="Select"
                    Expand="true" />
            <Markup Content="Selected: Select."
                    Foreground="@Color.Chartreuse1"
                    Decoration="@Decoration.Bold" />
        </Rows>
    </Panel>
    <Newline />
    <Markup Content="HTML Select Tag Support" Foreground="@Color.Yellow" Decoration="@Decoration.Bold" />
    <Markup Content="HTML select tags display all options at once with the selected option marked with '>'." Foreground="@Color.Grey70" />
    <Newline />
    <Panel Title="HTML Syntax" Border="BoxBorder.Rounded" Expand="true">
        <SyntaxHighlighter Language="html"
                           Code="@_htmlExampleCode"
                           ShowLineNumbers="true" />
    </Panel>
    <Panel Title="Preview" Border="BoxBorder.Rounded" Expand="true">
        <select value="csharp">
            <option value="csharp">C#</option>
            <option value="python">Python</option>
            <option value="javascript">JavaScript</option>
            <option value="typescript">TypeScript</option>
            <option value="rust">Rust</option>
        </select>
    </Panel>
</Rows>

@code {
    private static readonly string _exampleCode = @"<Rows>
    <Select Options=""@(new[] { ""Align"", ""Border"", ""Columns"", ""Panel"", ""Select"", ""Text Input"" })""
            Placeholder=""Choose a component""
            Value=""Select""
            Expand=""true"" />
    <Markup Content=""Selected: Select.""
           Foreground=""Color.Chartreuse1""
           Decoration=""Decoration.Bold"" />
</Rows>".Trim();

    private static readonly string _htmlExampleCode = @"<select value=""csharp"">
    <option value=""csharp"">C#</option>
    <option value=""python"">Python</option>
    <option value=""javascript"">JavaScript</option>
    <option value=""typescript"">TypeScript</option>
    <option value=""rust"">Rust</option>
</select>".Trim();

    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/Select.razor";
}
