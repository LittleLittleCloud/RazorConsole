@using Spectre.Console
@using Markup = RazorConsole.Components.Markup
@using Panel = RazorConsole.Components.Panel
@using Rows = RazorConsole.Components.Rows
<Rows>
    <Markup Content="Figlet renders large ASCII art text using Figlet fonts. " Foreground="@Color.Grey70" />
	<Markup Content="Source Code: Figlet.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
	<Newline />
    <Panel Title="Figlet" Border="BoxBorder.Rounded" Expand="true">
        <Figlet Content="Default color"/>
        <Figlet Content="Color.Aqua" Color="Color.Aqua"/>
        <Figlet Content="Justify.Left" Justify="Justify.Left"/>
    </Panel>

</Rows>

@code {
    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/Figlet.razor";
}
