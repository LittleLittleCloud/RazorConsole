@using RazorConsole.Components
@using Spectre.Console

<Rows>
    <Markup Content="Columns lays out child content horizontally, optionally stretching items to fill the available width." Foreground="@Color.Grey70" />
    <Newline />
    <Markup Content="Examples" Decoration="@Decoration.Bold" />
    <Rows>
        <Markup Content="Example 1" Decoration="@Decoration.Bold" />
        <Columns Expand="true">
            <Rows>
                <Markup Content="Source Code" Decoration="@Decoration.Bold" />
                @foreach (var line in _exampleOneCode)
                {
                    <Markup Content="@line" />
                }
            </Rows>
            <Rows>
                <Markup Content="Demo View" Decoration="@Decoration.Bold" />
                <Columns Expand="true">
                    <Rows>
                        <Markup Content="Column 1" Decoration="@Decoration.Bold" />
                    </Rows>
                    <Rows>
                        <Markup Content="Column 2" Decoration="@Decoration.Bold" />
                    </Rows>
                    <Rows>
                        <Markup Content="Column 3" Decoration="@Decoration.Bold" />
                    </Rows>
                </Columns>
            </Rows>
        </Columns>
    </Rows>
    <Markup Content="Source Code: Columns.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
</Rows>

@code {
    private static readonly string[] _exampleOneCode =
    {
    "<Columns Expand=\"true\">",
    "    <Rows>",
    "        <Markup Content=\"Column 1\" Decoration=\"Decoration.Bold\" />",
    "    </Rows>",
    "    <Rows>",
    "        <Markup Content=\"Column 2\" Decoration=\"Decoration.Bold\" />",
    "    </Rows>",
    "    <Rows>",
    "        <Markup Content=\"Column 3\" Decoration=\"Decoration.Bold\" />",
    "    </Rows>",
    "</Columns>",
    };

    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/Columns.razor";
}
