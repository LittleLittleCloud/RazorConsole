@using RazorConsole.Components
@using Spectre.Console

<Padder Padding="@_outerPadding">
    <Rows>
        <Markup Content="Rows stacks child content vertically and can optionally expand height to fill the available space." Foreground="@Color.Grey70" />
        <Newline />
        <Markup Content="Example" Decoration="@Decoration.Bold" />
        <Padder Padding="@_examplePadding">
            <Rows>
                <Panel Title="Morning" Border="@BoxBorder.Square" Expand="false">
                    <Padder Padding="@_innerPadding">
                        <Markup Content="Daily sync" />
                    </Padder>
                </Panel>
                <Panel Title="Afternoon" Border="@BoxBorder.Square" Expand="false">
                    <Padder Padding="@_innerPadding">
                        <Markup Content="Pair with teammates" />
                    </Padder>
                </Panel>
                <Panel Title="Evening" Border="@BoxBorder.Square" Expand="false">
                    <Padder Padding="@_innerPadding">
                        <Markup Content="Ship features" Foreground="@Color.Chartreuse1" />
                    </Padder>
                </Panel>
            </Rows>
        </Padder>
        <Newline />
        <Markup Content="Code Example" Decoration="@Decoration.Bold" />
        <Padder Padding="@_codeExamplePadding">
            <Rows>
                <Markup Content="@CodeExampleLine1" Foreground="@Color.DeepSkyBlue1" />
                <Markup Content="@CodeExampleLine2" Foreground="@Color.Grey70" />
                <Markup Content="@CodeExampleLine3" Foreground="@Color.Grey70" />
                <Markup Content="@CodeExampleLine4" Foreground="@Color.Grey70" />
                <Markup Content="@CodeExampleLine5" Foreground="@Color.DeepSkyBlue1" />
            </Rows>
        </Padder>
        <Newline />
        <Markup Content="Source Code: Rows.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
    </Rows>
</Padder>

@code {
    private static readonly Padding _outerPadding = new(1, 1, 1, 1);
    private static readonly Padding _examplePadding = new(0, 1, 0, 0);
    private static readonly Padding _innerPadding = new(1, 0, 1, 0);
    private static readonly Padding _codeExamplePadding = new(0, 1, 0, 0);

    private const string CodeExampleLine1 = "<Rows>";
    private const string CodeExampleLine2 = "    <Markup Content=\"Daily sync\" />";
    private const string CodeExampleLine3 = "    <Markup Content=\"Pair with teammates\" />";
    private const string CodeExampleLine4 = "    <Markup Content=\"Ship features\" />";
    private const string CodeExampleLine5 = "</Rows>";

    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/Rows.razor";
}
