@using RazorConsole.Components
@using Spectre.Console

<Padder Padding="@_outerPadding">
    <Rows>
        <Markup Content="Border wraps child content with a Spectre.Console panel using the configured border style, color, and padding." Foreground="@Color.Grey70" />
        <Newline />
        <Markup Content="Example" Decoration="@Decoration.Bold" />
        <Padder Padding="@_examplePadding">
            <Columns>
                <Border BoxBorder="@BoxBorder.Rounded" BorderColor="@Color.Chartreuse1" Padding="@_innerPadding">
                    <Markup Content="Rounded border with padding." />
                </Border>
                <Border BoxBorder="@BoxBorder.Double" BorderColor="@Color.DeepSkyBlue1" Padding="@_innerPadding">
                    <Markup Content="Double border and custom color." />
                </Border>
            </Columns>
        </Padder>
        <Newline />
        <Markup Content="Code Example" Decoration="@Decoration.Bold" />
        <Padder Padding="@_codeExamplePadding">
            <Rows>
                <Markup Content="@CodeExampleLine1" Foreground="@Color.DeepSkyBlue1" />
                <Markup Content="@CodeExampleLine2" Foreground="@Color.Grey70" />
                <Markup Content="@CodeExampleLine3" Foreground="@Color.DeepSkyBlue1" />
                <Markup Content="@CodeExampleLine4" Foreground="@Color.Grey70" />
                <Markup Content="@CodeExampleLine5" Foreground="@Color.DeepSkyBlue1" />
            </Rows>
        </Padder>
        <Newline />
        <Markup Content="Source Code: Border.razor" Foreground="@Color.DeepSkyBlue1" Decoration="@Decoration.Underline" link="@DocumentationUrl" />
    </Rows>
</Padder>

@code {
    private static readonly Padding _outerPadding = new(1, 1, 1, 1);
    private static readonly Padding _examplePadding = new(0, 1, 0, 0);
    private static readonly Padding _innerPadding = new(1, 0, 1, 0);
    private static readonly Padding _codeExamplePadding = new(0, 1, 0, 0);

    private const string CodeExampleLine1 = "<Border BoxBorder=\"BoxBorder.Rounded\" BorderColor=\"Color.Chartreuse1\" Padding=\"new(1, 0, 1, 0)\">";
    private const string CodeExampleLine2 = "    <Markup Content=\"Rounded border with padding.\" />";
    private const string CodeExampleLine3 = "</Border>";
    private const string CodeExampleLine4 = "<Border BoxBorder=\"BoxBorder.Double\" BorderColor=\"Color.DeepSkyBlue1\" Padding=\"new(1, 0, 1, 0)\">";
    private const string CodeExampleLine5 = "    <Markup Content=\"Double border and custom color.\" />";

    private const string DocumentationUrl = "https://github.com/LittleLittleCloud/RazorConsole/blob/main/src/RazorConsole.Core/Components/Border.razor";
}
